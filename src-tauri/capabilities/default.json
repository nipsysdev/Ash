{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Capability for the main window",
    "windows": ["main"],
    "permissions": [
        "core:default",
        "opener:default",
        "http:default",
        "store:default",
        "fs:default",
        {
            "identifier": "fs:allow-app-write",
            "allow": [{ "path": "$APPDATA/*" }]
        }
    ]
}
