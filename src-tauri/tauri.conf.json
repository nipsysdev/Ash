{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ash",
  "version": "0.1.0",
  "identifier": "dev.nipsys.ash",
  "build": {
    "beforeDevCommand": "deno task dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Ash",
        "width": 375,
        "height": 812,
        "fullscreen": false,
        "resizable": false,
        "backgroundColor": "#000"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
