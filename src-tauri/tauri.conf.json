{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Ash",
    "version": "0.1.0",
    "identifier": "dev.nipsys.ash",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Ash",
                "width": 375,
                "height": 812,
                "fullscreen": false,
                "resizable": false,
                "backgroundColor": "#000"
            }
        ],
        "security": {
            "csp": {
                "connect-src": [
                    "wss:",
                    "http://ipc.localhost",
                    "http://protomaps.github.io",
                    "http://tauri.localhost",
                    "https://dns.google",
                    "https://cloudflare-dns.com"
                ],
                "script-src": "'unsafe-eval' 'self'",
                "style-src": "'unsafe-inline' 'self'",
                "worker-src": ["blob:", "http://tauri.localhost"]
            },
            "assetProtocol": {
                "enable": true,
                "scope": ["$APPDATA/**", "$APPDATA/**/*"]
            }
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
